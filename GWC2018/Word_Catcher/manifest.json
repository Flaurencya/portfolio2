{
  "manifest_version": 2,
  "name": "Word Catcher",
  "version": "1.0",
  "description": "Automatically add words to vocab list",
  "permissions":  ["activeTab", "contextMenus", "storage", "tabs"],
  "icons": {
    "16": "logo.png"
  },
  "browser_action": {
    "default_icon": "logo.png",
    "default_title":"Word Catcher",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
          "matches": ["<all_urls>"],
          "js": ["content.js"]
    }],
  "background": {
    "scripts": ["background.js"],
    "default_title": "Word Catcher"
  }
}
